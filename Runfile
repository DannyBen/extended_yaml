require "runfile-tasks"
require "byebug"
require_relative 'lib/extended_yaml'

title   "ExtendedYAML Developer Toolbelt"
summary "Runfile tasks for building the ExtendedYAML gem"
version ExtendedYAML::VERSION

RunfileTasks::RubyGems.all 'extended_yaml'
RunfileTasks::Testing.rspec
RunfileTasks::Docs.rdoc

help   "Run YARD server"
action :yard do
  system "yard server -p3000 -B0.0.0.0 -r"
end

help   "Run interactive console"
action :console, :c do
  system "bundle exec bin/console"
end

help   "Generate TOC to toc.txt"
action :toc do
  exec 'gh-md-toc README.md > toc.txt'
end

help   "Generate changelog"
action :changelog do
  system 'github_changelog_generator --cache-file tmp/changlog-cache'  
  system "git commit -am 'update changelog' && git push"
end

require_relative 'debug' if File.exist? 'debug.rb'